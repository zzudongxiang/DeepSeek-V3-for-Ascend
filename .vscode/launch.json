    "version": "0.2.0",
    "configurations": [
        {
            "name": "Single-GPU",
            "type": "debugpy",
            "request": "launch",
            "program": "inference/generate.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--ckpt-path", "ckpt",
                "--config", "inference/configs/config_16B.json",
                "--input-file", "scripts/inputs.txt",
                "--use-random-weights",
            ]
        },
        {
            "name": "Multi-NPU",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.launch",
            "console": "integratedTerminal",
            "env": {
                "CUDA_DEVICE_MAX_CONNECTIONS": "1"
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "--nproc_per_node", "8",
                "--nnodes", "1",
                "--node_rank", "0",
                "--master_addr", "localhost",
                "--master_port", "6001",
                "inference/generate.py",
                "--ckpt-path", "ckpt",
                "--config", "inference/configs/config_16B.json",
                "--input-file", "scripts/inputs.txt",
                "--use-random-weights",
            ]
        }
    ]
}